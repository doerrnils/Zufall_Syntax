  <script>
    (function () {
      // ðŸ‘‰ Hier deine 4 Ziel-Links eintragen (kÃ¶nnen extern oder interne Pages sein)
      const targets = [
        "https://nils-experiment.limesurvey.net/852862?lang=de",
        "https://nils-experiment.limesurvey.net/277929?lang=de",
        "https://nils-experiment.limesurvey.net/727561?lang=de",
        "https://nils-experiment.limesurvey.net/839113?lang=de"
      ];

      // Optional: Query- und Hash-Parameter an das Ziel durchreichen?
      const passQueryAndHash = true;

      function pickRandom(arr) {
        return arr[Math.floor(Math.random() * arr.length)];
      }

      let url = new URL(pickRandom(targets));

      if (passQueryAndHash) {
        const current = new URL(window.location.href);
        // Query anhÃ¤ngen (ohne vorhandene Keys im Ziel zu Ã¼berschreiben)
        current.searchParams.forEach((v, k) => {
          if (!url.searchParams.has(k)) url.searchParams.set(k, v);
        });
        // Hash durchreichen, falls gesetzt und Ziel keinen eigenen hat
        if (!url.hash && current.hash) url.hash = current.hash;
      }

      // replace() verhindert, dass die Zwischenseite im Verlauf landet
      window.location.replace(url.toString());
    })();
  </script>
